@model ShopOfPhone.Models.CreatePhoneViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru" class="h-100" data-bs-theme="auto">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopOfPhone</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

</head>

<body>

    <div class="vh-100">
        <div class="d-flex align-items-center h-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-6">
                        <div class="modal-content rounded-4 shadow">

                            <div class="modal-header p-5 pb-4 border-bottom-0">
                                <h1 class="fw-bold mb-0 fs-2">Phone add form</h1>
                                <form asp-action="Index" asp-controller="Shop">
                                    <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </form>
                            </div>

                            <div class="modal-body p-5 pt-0">
                                <form asp-action="PhoneAdd" asp-controller="Shop" enctype="multipart/form-data">

                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" type="text" class="form-control rounded-3" id="floatingName" placeholder="IPhone 6S">
                                        <label for="floatingName">Write name of phone</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Price" type="number" class="form-control rounded-3" id="floatingPrice" placeholder="1200">
                                        <label for="floatingPrice">Price of phone</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Quantity" type="number" class="form-control rounded-3" id="floatingNumberPhone" placeholder="200">
                                        <label for="floatingNumberPhone">Number of phones</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Information" class="form-control rounded-3" id="floatingInformation" placeholder="It is good phone"></textarea>
                                        <label for="floatingInformation">Information about phone</label>
                                    </div>

                                    <div class="input-group mb-3">
                                        <input asp-for="PhonePhoto" type="file" class="form-control" id="inputGroupFile">
                                        <label class="input-group-text" for="inputGroupFile">Upload</label>
                                    </div>

                                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Save</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="./Album example · Bootstrap v5.3_files/bootstrap.bundle.min.js.download" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</body>
</html>