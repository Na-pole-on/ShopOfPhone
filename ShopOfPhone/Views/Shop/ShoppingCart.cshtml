@if (Model.Orders.Count() > 0)
{
    <div class="album py-5 bg-body-tertiary">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                @foreach (var order in Model.Orders)
                {
                    <div class="col">
                        <div class="card shadow-sm">

                            <div style="">
                                <img class="img-thumbnail" src="@order.Phone.PhoneLink" alt="@order.Phone.PhoneLink" />
                            </div>

                            <div class="card-body">
                                <h2 class="text-start">@order.Phone.Name</h2>
                                <p class="card-text">@order.Phone.Information</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                                    </div>
                                    <small class="text-body-secondary">$@order.Phone.Price</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex align-items-center h-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-4">
                    <div class="card-body text-center p-5">

                        <p>We don't have any phones available yet</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
}